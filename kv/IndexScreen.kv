#: import utils kivy.utils

<IndexScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("22EACA")
            Rectangle:
                size: self.size
                pos: self.pos

        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("FF9E74")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 3
            pos_hint: {"top": 1, "left": 1.4}
            size_hint: 1, .3
            GridLayout:
                rows: 2
                size_hint: 0.3, .7
                ImageButton:
                    source: "images_folder/backButton.png"
                    on_release:
                        app.change_screen("HomeScreen")
                Label:
                    size_hint: .5, 1
                    text: ""
            Label:
                text: ""
                font_size: '30sp'
                font: 'Arial'
                id: username
                name: "username"
            Label:
                size_hint: 0.3, 1
                text: ""

        GridLayout:
            cols: 3
            pos_hint: {"top": .65, "left": 1.4}
            size_hint: 1, .1
            Label:
                size_hint: 0.3, 1
                text: ""
            Button:
                size_hint: 0.5, 1
                id: create_button
                name: "create_button"
                text: "Create Time Table"
                on_release:
                    app.index_create_time_table()
            Label:
                size_hint: 0.3, 1
                text: ""

        GridLayout:
            cols: 3
            pos_hint: {"top": .50, "left": 1.4}
            size_hint: 1, .1
            Label:
                size_hint: 0.3, 1
                text: ""
            Button:
                size_hint: 0.5, 1
                id: update_button
                name: "update_button"
                text: "Update Time Table"
                on_release:
                    app.index_update_time_table()
            Label:
                size_hint: 0.3, 1
                text: ""

        GridLayout:
            cols: 3
            pos_hint: {"top": .35, "left": 1.4}
            size_hint: 1, .1
            Label:
                size_hint: 0.3, 1
                text: ""
            Button:
                size_hint: 0.5, 1
                text: "Display Time Table"
                on_release:
                    app.display_time_table()
            Label:
                size_hint: 0.3, 1
                text: ""